$("section#detail div.edit").html("<%= escape_javascript(render(:partial => 'form'))%>");
if (!$("section#detail div.edit").hasClass("active")) {
    $("section#detail div.active").animate({
        height: 'toggle'
    }, 300, function() {
        $("section#detail div.active").hide();
        $("section#detail div.edit").show();
        $("section#detail div.edit").animate({
            height: $("section#detail div.edit").height()
        }, 300, function() {
            $("section#detail div.active").removeClass("active");
            $("section#detail div.edit").addClass("active");
        });
    });
}