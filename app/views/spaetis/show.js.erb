$("section#detail div.details").html("<%= escape_javascript(render(:partial => 'show'))%>");
if (!$("section#detail div.details").hasClass("active")) {
    $("section#detail div.active").animate({
        height: 'toggle'
    }, 300, function() {
        $("section#detail div.active").hide();
        $("section#detail div.details").show();
        $("section#detail div.details").animate({
            height: $("section#detail div.details").height()
        }, 300, function() {
            $("section#detail div.active").removeClass("active");
            $("section#detail div.details").addClass("active");
        });
    });
}