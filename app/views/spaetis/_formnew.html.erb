<div class="new">
  <header>
    <div class="commands">
      <%= link_to "", @spaeti, :remote => true, :class => "rp save", :title => "Erstellen" %>
      <a href="" class="rp cancel" title="Abbrechen"></a>
    </div>
    <div class="clearfix"></div>
  </header>
  <%= form_for(@spaeti, :remote => true) do |f| %>
      <%= @spaeti.errors.first %>
      <%= f.label :name, "Name" %>
      <p>
        <%= f.text_field :name %>
      </p>
      <%= f.label :street, "Straße" %> / <%= f.label :number, "Hausnummer" %>
      <p>
        <%= f.text_field :street %><%= f.text_field :number, :size => 5 %>
      </p>
      <%= f.label :postal, "PLZ" %> / <%= f.label :city, "Stadt" %> / <%= f.label :district, "Bezirk" %>
      <p>
        <%= f.text_field :postal, :size => 5 %><%= f.text_field :city %><%= f.text_field :district, :size => 19 %>
      </p>
      <%= f.label :open, "geöffnet bis" %>
      <p>
        <%= f.text_field :open %>
      </p>

      <div id="newspaeti_errors"></div>
  <% end %>
  <div id="features">
    <%= render :partial => 'features/features' %>
  </div>
  <div class="clearfix"></div>
  <div id="products">
    <%= render :partial => 'products/products' %>
  </div>
  <div class="clearfix"></div>
</div>