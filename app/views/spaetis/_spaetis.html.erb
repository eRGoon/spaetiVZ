<% @spaetis.each do |spaeti| %>
    <div class="item">
      <div class="info">
        <%= link_to spaeti.name, spaeti, :remote => true %>
      </div>
      <div class="commands">
        <%= link_to "Edit", edit_spaeti_path(spaeti), :remote => true %>
        <%= link_to "Destroy", spaeti, :remote => true, :confirm => 'Are you sure?', :method => :delete %>
      </div>
    </div>
<% end %>